extends baseNav

block content
    section#playerPage(data-playlist=playlist)
        div#musicPlayer(data-id=song._id)
            div.listLikeBtns 
                span
                    a(href=`/music`) &larr; 전체 목록으로 돌아가기
                
                - if (playlist.includes(`${song._id}`))
                    button.likeBtn(title="플레이리스트에서 제거하기") ✔️
                - else 
                    button.likeBtn(title="플레이리스트에 추가하기") 👍
            div.imgdiv
                img(src='/'+song.imgpath)

            div.playerControler
                h1=song.title
                h2=song.artist
                div.muteAnsLyrics
                    span#muteHoverIcon
                        i.fas.fa-volume-down.fa-lg
                            div#muteBox
                                button#muteBtn
                                    i.fas.fa-volume-up.fa-lg#muteBtnIcon
                                input(type="range", step="0.1",value=0.5, min="0", max="1")#volume
                    span#lyricsIcon
                        i.far.fa-file-alt


                div.audioControlerBtns
                    button#suffle
                        i.fas.fa-random
                    button#prevSong
                        i.fas.fa-angle-double-left.lg
                    button#play
                        i#playBtnIcon.fas.fa-pause-circle.lg
                    button#nextSong
                        i.fas.fa-angle-double-right.lg
                    button#repeat(title="반복듣기", loop=false)
                        i.fas.fa-retweet 

            
                input(type="range", step="1", value="0", min="0")#timeline
                div.playerTime
                    span#currentTime 00:00
                    span#totalTime 00:00
                audio(src='/'+song.songpath autoplay) 
        div.playerPage_right 
            h2 영상 player?
            h2 가사





block scripts
    script(src="/static/js/musicPlayer.js")