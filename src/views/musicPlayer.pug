extends base

block content
    div#musicPlayer(data-id=song._id)
        div
            h4
                a(href=`/music`) &larr; 목록으로 돌아가기
            button 👍
        img(src='/'+song.imgpath)
        h1=song.title
        h2=song.artist
        audio(controls src='/'+song.songpath autoplay) 
        div#audio
            button#play Pause
            button#mute Mute
            span#time 00:00/00:00
            input(type="range", step="0.1",value=0.5, min="0", max="1")#volume
        span 재생 수: #{song.views}
        span 찜한 수: #{song.like}


block navBlock 
    include partials/nav


block scripts
    script(src="/static/js/musicPlayer.js") 